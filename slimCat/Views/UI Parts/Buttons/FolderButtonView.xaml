<Button x:Class="slimCat.Views.FolderButtonView"
        x:Name="FolderButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource ImageContentButton}"
        Margin="2"
        ToolTip="Open logs and settings folder">
    <Button.Content>
        <Rectangle Fill="{Binding ElementName=FolderButton, Path=Foreground}"
                   Height="15"
                   Width="20">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="pack://application:,,,/icons/folder.png" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </Button.Content>
</Button>