<Button x:Class="slimCat.Views.EditButtonView"
        x:Name="EditButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource ImageContentButton}"
        Margin="2"
        ToolTip="Manage and edit this channel">
    <Button.Content>
        <Rectangle Fill="{Binding ElementName=EditButton, Path=Foreground}"
                   Height="18"
                   Width="18">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="pack://application:,,,/icons/edit.png" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </Button.Content>
</Button>