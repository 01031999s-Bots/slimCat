<Button x:Class="slimCat.Views.RestartButtonView"
        x:Name="RestartButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource ImageContentButton}"
        Margin="2"
        ToolTip="Clear Backlog">
    <Button.Content>
        <Rectangle Fill="{Binding ElementName=RestartButton, Path=Foreground}"
                   Height="18"
                   Width="15">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="pack://application:,,,/icons/restart.png" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </Button.Content>
</Button>