<ToggleButton x:Class="slimCat.Views.ProfileButtonView"
              x:Name="ProfileButton"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              Style="{StaticResource ImageContentToggleButton}"
              ToolTip="Toggles between viewing the character's profile or not"
              Margin="2,0,2,0">
    <ToggleButton.Content>
        <Rectangle Fill="{Binding ElementName=ProfileButton, Path=Foreground}"
                   Height="18"
                   Width="18">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="pack://application:,,,/icons/profile.png" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </ToggleButton.Content>
</ToggleButton>