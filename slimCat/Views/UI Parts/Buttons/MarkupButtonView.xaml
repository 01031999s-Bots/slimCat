<ToggleButton x:Class="slimCat.Views.MarkupButtonView"
             x:Name="MarkupButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ToolTip="Toggles showing a bbcode previewer for your current message"
             Style="{StaticResource ImageContentToggleButton}"
             Margin="4,0,4,2">

    <ToggleButton.Content>
        <Rectangle Fill="{Binding ElementName=MarkupButton, Path=Foreground}"
                   Height="18"
                   Width="18">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="pack://application:,,,/icons/markup.png" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </ToggleButton.Content>
</ToggleButton>