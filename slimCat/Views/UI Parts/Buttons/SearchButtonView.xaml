<ToggleButton x:Class="slimCat.Views.SearchButtonView"
              x:Name="SearchButton"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              Style="{StaticResource ImageContentToggleButton}"
              ToolTip="Switch to searching mode"
              Margin="2,7,2,0">
    <ToggleButton.Content>
        <Rectangle Fill="{Binding ElementName=SearchButton, Path=Foreground}"
                   Height="18"
                   Width="18">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="pack://application:,,,/icons/search.png" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </ToggleButton.Content>
</ToggleButton>