<Button x:Class="Slimcat.Views.MoreButtonView"
        x:Name="MoreButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource ImageContentButton}"
        ToolTip="Switch between viewing this channel's Ads and normal messages"
        Margin="2,10,2,0">
    <Button.Content>
        <Rectangle Fill="{Binding ElementName=MoreButton, Path=Foreground}"
                   Height="15"
                   Width="15">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="pack://application:,,,/icons/more.png" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </Button.Content>
</Button>