<UserControl x:Class="Views.CloseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="Conv"  />
    </UserControl.Resources>
    
    <Button BorderThickness="0"
            x:Name="Root"
            Padding="2"
            Content="X"
            Background="{StaticResource HighlightBrush}"
            Foreground="{StaticResource ForegroundBrush}"
            Visibility="{Binding Path=CanClose, Mode=OneWay,
            Converter={StaticResource Conv}}"
            Command="{Binding Path=DataContext.CloseCommand,
            RelativeSource={RelativeSource Mode=FindAncestor,
            AncestorType={x:Type ItemsControl}} }"
            CommandParameter="{Binding ID}"
            >
    </Button>
    <UserControl.Style>
        <Style>
            <Style.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="True">
                    <Setter Property="Button.Opacity" Value="1" />
                </Trigger>
                <Trigger Property="Button.IsMouseOver" Value="False">
                    <Setter Property="Button.Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
</UserControl>
