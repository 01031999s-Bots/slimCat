<Paragraph x:Class="Views.HistoryView"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:lib="clr-namespace:lib"
           Margin="0,2"
           Padding="0"
           Foreground="{StaticResource HistoryBrush}"
           FontFamily="Segoe UI, Verdanda"
           FontSize="13">
    <Span lib:SpanHelper.InlineSource="{Binding Mode=OneTime, Converter={StaticResource BBFlowHistoryConverter}, IsAsync=True}"/>
</Paragraph>