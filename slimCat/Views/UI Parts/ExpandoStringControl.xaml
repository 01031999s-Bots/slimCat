<UserControl x:Class="Views.ExpandoStringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <WrapPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
        
        <TextBlock Foreground="{StaticResource ForegroundBrush}"
                   TextWrapping="Wrap">
            <Run Text="{Binding DisplayText, Mode=OneWay}"/>
            <Hyperlink Click="OnExpand"
                       Command="{x:Null}">
                <Run Text="{Binding ExpandString, Mode=OneWay}"/>
            </Hyperlink>
        </TextBlock>
    </WrapPanel>
</UserControl>
