<UserControl x:Class="Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ViewModels"
             xmlns:lib="clr-namespace:lib"
             xmlns:sys="clr-namespace:System">
    <UserControl.Resources>
        <sys:OppositeBoolConverter x:Key="BoolConverter" />
    </UserControl.Resources>
    <StackPanel IsEnabled="{Binding RequestSent, Converter={StaticResource BoolConverter}}"
                VerticalAlignment="Center"
                Margin="20"
                TextBlock.FontSize="20"
                TextBlock.Foreground="{StaticResource ForegroundBrush}">
        <TextBlock Text="{Binding RelayMessage, Mode=OneWay}" 
                   HorizontalAlignment="Center"
                   Margin="20"
                   TextWrapping="Wrap"/>
        <StackPanel MaxWidth="400">
            <TextBox Text="{Binding AccountName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="20, 10" />
            <PasswordBox Margin="20, 10"
                         lib:PasswordBoxAssistant.BindPassword="true"
                         lib:PasswordBoxAssistant.BoundPassword=
                         "{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <PasswordBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding LoginCommand}" />
                </PasswordBox.InputBindings>
            </PasswordBox>
        </StackPanel>
        
        <TextBlock HorizontalAlignment="Center">
            <Hyperlink CommandParameter="http://chat.f-list.net:9002/stats/"
                       >Chat Stats</Hyperlink>
        </TextBlock>
        
        <WrapPanel Margin="20"
                   HorizontalAlignment="Center">
            <Button Command="{Binding LoginCommand}"
                    Content="Connect"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Center"/>
            <ToggleButton Content="Save Login"
                          IsChecked="{Binding SaveLogin}"
                          Margin="5,0,0,0"/>
        </WrapPanel>
    </StackPanel>
</UserControl>
