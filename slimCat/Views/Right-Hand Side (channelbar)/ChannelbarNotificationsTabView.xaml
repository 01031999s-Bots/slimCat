<UserControl x:Class="Slimcat.Views.NotificationsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:v="clr-namespace:Slimcat.Views"
             xmlns:models="clr-namespace:Slimcat.Models" 
             xmlns:lib="clr-namespace:Slimcat.Libraries"
             MaxWidth="175">
    <UserControl.Resources>


        <DataTemplate DataType="{x:Type models:ChannelUpdateModel}">
            <ContentControl Margin="0"
                            Content="{Binding}"
                            ContentTemplate="{StaticResource ChannelUpdateTemplate}">
            </ContentControl>
        </DataTemplate>
    </UserControl.Resources>

    <DockPanel>
        <v:RightClickMenu />
        <v:CreateReportView />
        <v:RestartButtonView Command="{Binding Path=ClearNotificationsCommand}"
                             ToolTip="Clear all notifications"
                             DockPanel.Dock="Top" />
        
        <v:SearchBoxView DockPanel.Dock="Bottom" />
        
        <TextBlock Text="No notifications ..."
                   TextWrapping="Wrap"
                   Visibility="{Binding Path=HasNoNotifications, Converter={StaticResource BoolConverter}}" />
        
        <v:ObservingFlowDocumentReader x:Name="PopupAnchor" MessageSource="{Binding Path=CurrentNotifications, Mode=OneWay}"/>
        
    </DockPanel>
</UserControl>