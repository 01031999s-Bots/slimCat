<UserControl x:Class="Views.UserbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lib="clr-namespace:lib"
             xmlns:v="clr-namespace:Views"
             xmlns:sys="clr-namespace:System">
    
    <DockPanel TextBlock.FontSize="14"
               Visibility="{Binding Path=CM.IsAuthenticated, Mode=OneWay, Converter={StaticResource BoolConverter}}"
               TextBlock.Foreground="{StaticResource ForegroundBrush}"
               TextBlock.TextAlignment="Center">

        <Button Width="15"
                DockPanel.Dock="Right"
                Content="{Binding Path=ExpandString, Mode=OneWay}"
                BorderThickness="0"
                Padding="0"
                HorizontalAlignment="Center"
                Background="{Binding Path=HasUpdate, Mode=OneWay, Converter={StaticResource ColorConverter}}"
                Command="{Binding Path=ToggleBarCommand}"/>
        <Grid Margin="15,20"
              Visibility="{Binding Path=IsExpanded, Converter={StaticResource BoolConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border BorderBrush="{StaticResource HighlightBrush}"
                    BorderThickness="0,0,0,1"
                    x:Name="PopupAnchor"
                    HorizontalAlignment="Stretch">
                <DockPanel>
                    <Image Source="{Binding Path=CM.SelectedCharacter.Avatar}"
                            Height="75"
                            Width="75"/>
                    <StackPanel Margin="5,-5,0,0"
                                DockPanel.Dock="Right"
                                HorizontalAlignment="Right">
                        <TextBlock Text="{Binding Path=CM.SelectedCharacter.Name}"
                                   HorizontalAlignment="Right"
                                   TextAlignment="Right"
                                   MaxWidth="100"
                                   TextWrapping="Wrap"
                                   FontSize="20"/>
                        <Button Content="{Binding Path=CM.SelectedCharacter.Status}"
                                HorizontalAlignment="Right"
                                Style="{StaticResource ImageContentButton}"
                                Command="{Binding ToggleStatusWindowCommand}"
                                Padding="0"
                                FontSize="16"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <Popup IsOpen="{Binding Path=IsChangingStatus, Mode=OneWay}"
                   PlacementTarget="{Binding ElementName=PopupAnchor}"
                   Placement="Center">
                <Border BorderBrush="{StaticResource HighlightBrush}"
                        BorderThickness="1">
                    <StackPanel Orientation="Vertical"
                                Margin="5"
                                Background="{StaticResource BackgroundBrush}">
                        <TextBlock Text="Status Management"
                                   Foreground="{StaticResource ForegroundBrush}"
                                   FontSize="20"
                                   Margin="10,5"/>
                        
                        <ComboBox ItemsSource="{Binding Path=StatusTypes}"
                                  DisplayMemberPath="Key"
                                  SelectedValue="{Binding CM.SelectedCharacter.Status}"
                                  SelectedValuePath="Value"
                                  Margin="10,5"
                                  FontSize="12"/>
                        
                        <TextBox Text="{Binding Path=CM.SelectedCharacter.StatusMessage, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="12"
                                 TextWrapping="Wrap"
                                 MaxWidth="200"
                                 Margin="10,5"/>
                        
                        <Button Content="Save Changes"
                                Margin="10,5"
                                Command="{Binding ToggleStatusWindowCommand}"/>
                    </StackPanel>

                </Border>
            </Popup>
            
            <ScrollViewer Grid.Row="1"
                          CanContentScroll="False">
                <StackPanel>
                    <Expander Header="Conversations"
                              IsExpanded="{Binding Path=PMsAreExpanded}"
                              Visibility="{Binding Path=HasPMs, Converter={StaticResource BoolConverter}}"
                              Grid.Row="1">
                        <ListBox ItemsSource="{Binding Path=CM.CurrentPMs, Mode=OneWay}"
                                 HorizontalContentAlignment="Stretch"
                                 SelectedIndex="{Binding Path=PM_Selected, Mode=TwoWay}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <v:PMSelectView/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Expander>
                    <Expander Header="Channels"
                              IsExpanded="{Binding Path=ChannelsAreExpanded}"
                              Grid.Row="2">
                        <ListBox ItemsSource="{Binding Path=CM.CurrentChannels, Mode=OneWay}"
                                 HorizontalContentAlignment="Stretch"
                                 SelectedIndex="{Binding Path=Chan_Selected, Mode=TwoWay}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <v:ChannelSelectView />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</UserControl>
